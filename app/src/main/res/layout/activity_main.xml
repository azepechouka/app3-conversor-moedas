<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.conversordemoedas.MainActivity">

    <TextView
        android:id="@+id/tv_title_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minha Carteira"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_real_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Real (R$):"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_wallet"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_real_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 100.000,00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/tv_real_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_dollar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DÃ³lar ($):"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_real_label"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_dollar_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 50.000,00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/tv_dollar_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_bitcoin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitcoin (BTC):"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dollar_label"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_bitcoin_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.5000 BTC"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/tv_bitcoin_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_convert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Converter Recursos"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>